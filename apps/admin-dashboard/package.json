{
  "name": "makanmakan-admin-dashboard",
  "version": "1.0.0",
  "description": "MakanMakan 管理後台",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc && vite build",
    "preview": "vite preview --host",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .vue,.ts,.js --fix",
    "lint:fix": "eslint src --ext .vue,.ts,.js --fix",
    "deploy:staging": "wrangler pages deploy dist --project-name=makanmakan-admin-staging",
    "deploy:prod": "wrangler pages deploy dist --project-name=makanmakan-admin"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.0",
    "@heroicons/vue": "^2.0.0",
    "@makanmakan/shared-types": "workspace:*",
    "@tailwindcss/forms": "^0.5.0",
    "@vueuse/core": "^10.7.0",
    "axios": "^1.6.0",
    "chart.js": "^4.4.0",
    "date-fns": "^3.0.0",
    "lodash-es": "^4.17.0",
    "lucide-vue-next": "^0.344.0",
    "pinia": "^2.1.0",
    "vue": "^3.4.27",
    "vue-chartjs": "^5.3.0",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.2.0",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@pinia/testing": "^0.1.0",
    "autoprefixer": "^10.4.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.2.11",
    "vitest": "^1.0.0",
    "vue-tsc": "^3.0.6",
    "wrangler": "^3.57.0"
  }
}