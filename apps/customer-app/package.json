{
  "name": "makanmakan-customer-app",
  "version": "1.0.0",
  "description": "MakanMakan 消費者點餐應用",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc && vite build",
    "preview": "vite preview --host",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "deploy:staging": "wrangler pages deploy dist --project-name=makanmakan-customer-staging",
    "deploy:prod": "wrangler pages deploy dist --project-name=makanmakan-customer"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.0",
    "@heroicons/vue": "^2.0.0",
    "@makanmakan/shared-types": "workspace:*",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@tanstack/vue-query": "^5.0.0",
    "@vueuse/components": "^10.0.0",
    "@vueuse/core": "^10.0.0",
    "@zxing/library": "^0.20.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.6.0",
    "dayjs": "^1.11.0",
    "lodash-es": "^4.17.0",
    "pinia": "^2.1.0",
    "postcss": "^8.4.0",
    "qrcode-reader": "^1.0.4",
    "tailwindcss": "^3.4.0",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.5",
    "vue-qrcode-component": "^2.1.1",
    "vue-router": "^4.2.0",
    "vue-toastification": "^2.0.0-rc.5",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/lodash-es": "^4.17.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^3.0.6",
    "wrangler": "^3.0.0"
  }
}